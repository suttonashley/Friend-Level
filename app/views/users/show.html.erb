<h1><%= @user.username %></h1>


<!-- <div class="curfriends">
  <div class="col-md-4 col-sm-6" > -->
<% unless current_user == @user || current_user.is_friends_with?(@user) %>
  <%= button_to 'Add+', add_friend_path(friend: @user.id) %>
<% end %>
  <!-- </div>
</div> -->

<section>
<h2><%= @user.username %>'s current friends:</h2>

<% @user.accepted_friends.each do |friend| %>

    @<%= friend.username %>
  <% if current_user == @user %>
    <%= link_to "(Unfriend - It's not you, it's me)", friendship_path(friend), :method => :delete %>
  <% end %>
<% end %>
</section>

<section>
<ul>
  <h1>Here are your tasks:</h1>
  <% @user.tasks.each do |task| %>

  <div class="postit col-md-4 col-sm-6" >
    <div class="usertask">
    <div class="title"><b><%= task.title %><br></b></div>
    <%= task.details %><br>
    <%= task.due_date.strftime("%b. %d, %Y - %I:%M %p")%><br><br>
    <b>Worth <%= task.points %> Point(s)</b><br>
    <% if current_user.id == task.user_id%>
      (<%= link_to 'Edit', edit_user_task_path(current_user, task) %>)
      (<%= link_to 'Delete', task, :method => :delete %>)
      <% else %>
      <%= link_to 'Pick up this task', request_task_path(current_user, task), :method => :post %>
    <% end %>
    </div>
  </div>
  <% end %>
</ul>
</section>

<section>
<h1> The Tasks You've Picked Up </h1>
<ul>
  <% if current_user %>
    <% @user_tasks.each do |task| %>
    <div class="postit col-md-4 col-sm-6" >
    <div class="taskspicked">
    <li>
      <div class="title"><b><%= task.title %><br></b></div>
      <%= task.details %><br>
      <%= task.due_date.strftime("%b. %d, %Y - %I:%M %p") %><br><br>
      <b>Worth <%= task.points %>Point(s)</b><br>
    </li>
    <% end %>
    </div>
    </div>
  <% end %>
</ul>
</section>
