<!--User Index Page -->


<%= params[:term] %>

<div class="rearchresults">
  <h1>Your Search Results...</h>
</div>

<% @users.each do |u|%>
  <div class="card">
   <div class="col-sm-6 col-md-4 col-md-offset-4">
     <div class="tn animated finite fadeInDown">
       <!-- <#%= image_tag u.avatar.url(:thumb) %> -->
          <div class="caption">
            <% if u.friends.map(&:id).include?(current_user.id) %>
            <p>
              <%= image_tag u.avatar.url(:medium), class: "img-responsive img-circle" %>
            </p>
              <p><%= link_to u.username, u %></p>
              <p class= "remove-friend">
                <%= link_to 'Remove Friend', friendship_path(u), :method => :delete %>
              </p>
            <% else %>
            <p>
              <%= image_tag u.avatar.url(:medium), class: "img-responsive img-circle" %>
            </p>
              <%= u.username %>
              <p class="add-friend">
                <%= button_to 'Add Friend', add_friend_path(friend: u.id), class: "btn btn-danger btn-sm"%>
              </p>
            <% end %>
          </div>
      </div>
    </div>
  </div>
<% end %>


