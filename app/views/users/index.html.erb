<!--User Index Page -->

<body class="index-page">

<div class="search">
  <h3>Showing search results for "<%= params[:term] %>"</h3>
</div>
  <div class="card">

    <div class="yourresults animated finite bounceInDown">
        <h1>Your Search Results...</h1>
    </div>


    <% @users.each do |u|%>
     <div class="col-sm-6 col-md-4 col-md-offset-4">
       <div class="tn animated finite fadeInDown">
            <div class="caption">
              <p>
                <% if u.avatar.blank? %>
                  <%= image_tag("http://vignette4.wikia.nocookie.net/dragcave/images/6/6e/No_avatar.jpg/revision/latest?cb=20140427211725", class: "img-responsive center-block", height: 200) %>
                <% else %>
                  <%= image_tag u.avatar.url(:medium), class: "img-responsive center-block", height: 200 %>
                <% end %>
              </p>
              <hr>
              <% case current_user.status_with(u) %>
                <% when "NONE" %>
                  <%= u.username %>
                  <p class="add-friend">
                    <%= button_to 'Add Friend', add_friend_path(friend: u.id), class: "btn btn-danger btn-sm animated infinite tada"%>
                  </p>
                  <p>
                <% when "accepted" %>
                  <p><%= link_to u.username, u %></p>
                  <p class= "remove-friend">
                    <%= link_to 'remove friend', friendship_path(u), :method => :delete %>
                  </p>
                <% when "pending" %>
                  <%= u.username %><br>
                  <span>Friendship Requested</span>
                <% end %>
                </p>
            </div>
        </div>
      </div>
    <% end %>
  </div>


<body background="http://cdn.mysitemyway.com/etc-mysitemyway/backgrounds/legacy-previews/backgrounds/watercolor-grunge/watercolor-grunge-000053-metallic-gold.jpg">
